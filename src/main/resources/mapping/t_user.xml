<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yan.ssm.dao.UserDao">

    <resultMap id="BaseMap" type="com.yan.ssm.model.TblUser">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="user_name" property="userName" jdbcType="VARCHAR"/>
        <result column="user_phone" property="userPhone" jdbcType="VARCHAR"/>
        <result column="user_email" property="userEmail" jdbcType="VARCHAR"/>
        <result column="user_pwd" property="userPwd" jdbcType="VARCHAR"/>
        <result column="pwd_salt" property="pwdSalt" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="DATE"/>
        <result column="modify_time" property="modifyTime" jdbcType="DATE"/>
        <result column="is_delete" property="isDelete" jdbcType="SMALLINT"></result>
    </resultMap>

    <select id="selectUserById" parameterType="java.lang.Long" resultMap="BaseMap">
        SELECT * FROM t_user
        WHERE id = #{userId}
    </select>


    <select id="selectAllUser" resultMap="BaseMap">
        SELECT * FROM t_user
    </select>

    <update id="updateByPrimaryKey" parameterType="java.lang.Long">
        update t_user
        <set>
            <if test="userName!=null and userName!='' ">
                user_name=#{userName},
            </if>
            <if test="password!=null and password!='' ">
                user_pwd=#{password}
            </if>
        </set>
        where id=#{id}
    </update>

    <select id="selectByPrimaryKey"  resultType="com.yan.ssm.model.TblAdmin">
        select * from    t_user   where id=#{id}
    </select>

    <delete id="deleteUser" parameterType="int">
        delete from t_user
        where id=#{id}
    </delete>

    <select id="selectByNick" parameterType="java.lang.String" resultMap="BaseMap">
        SELECT * FROM t_user
        WHERE username = #{username}
    </select>
</mapper>